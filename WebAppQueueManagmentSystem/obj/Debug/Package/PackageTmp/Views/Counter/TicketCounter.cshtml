@model IList<WebAppQueueManagmentSystem.ApiHelpers.Response.CounterTokenBody>


<div class="row mt-5">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Counter Token</h2>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb-5">
        <div class="tab-regular">
            <ul class="nav nav-tabs nav-fill" id="myTab7" role="tablist">
                
                <li class="nav-item">
                    <a class="nav-link active" id="profile-tab-justify" data-toggle="tab" href="#profile-justify" role="tab" aria-controls="profile" aria-selected="false">Complete</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="contact-tab-justify" data-toggle="tab" href="#contact-justify" role="tab" aria-controls="contact" aria-selected="false">Serving</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent7">
                 
                <div class="tab-pane show active" id="profile-justify" role="tabpanel" aria-labelledby="profile-tab-justify">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered second" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Token Number</th>
                                    <th>Served Time (mm:ss)</th>
                                    <th>Service Option</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (item.StatusId == 2) {

                                        TimeSpan remaingTime = (item.CompletedDate - item.ServingTime);

                                       
                                    <tr>
                                        <td>@item.TokenNumber</td>
                                        @if (item.CompletedDate != null) { 
                                          <td>@remaingTime.Minutes.ToString("00") : @remaingTime.Seconds.ToString("00")</td>
                                        }
                                        <td>@item.ServiceType</td>
                                    </tr>
                                    }

                                   
                                }

                            </tbody>


                        </table>
                    </div>
                </div>
                <div class="tab-pane fade" id="contact-justify" role="tabpanel" aria-labelledby="contact-tab-justify">
                    <ul class="list-group">
                        @{
                            int ServingToken = 0;
                        }
                        @foreach (var item in Model)
                        {
                            ServingToken++;
                            if (item.StatusId == 4)
                            {

                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @item.TokenNumber
                                    <span class="badge badge-primary badge-pill">Serving</span>
                                </li>

                            }



                        }

                        @if (ServingToken == 0)
                        {
                            <li class="list-group-item text-center">
                                <p>There are no serving tickets to show</p>
                            </li>
                        }


                    </ul>




                </div>
            </div>
        </div>
    </div>
</div>