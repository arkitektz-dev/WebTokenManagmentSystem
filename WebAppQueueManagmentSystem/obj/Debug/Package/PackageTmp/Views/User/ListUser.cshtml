


<div class="row mt-5" id="listUser">
    <div class="col-xl-9 col-lg-10 col-md-10 col-sm-10 col-10">
        <div class="page-header">
            <h2 class="pageheader-title">List User</h2>
        </div>
    </div>

    <div class="col-md-1">
        <button class="btn btn-primary ml-5 mb-3" id="btnSearch">Search</button>
    </div>

    <div class="col-md-1">
        <button class="btn btn-primary ml-5 mb-3" id="btnCreate">Create</button>
    </div>
</div>

<div class="row mt-5" style="display:none;" id="CreateUser">
    <div class="col-xl-9 col-lg-10 col-md-10 col-sm-10 col-10">
        <div class="page-header">
            <h2 class="pageheader-title">Create User</h2>
        </div>
    </div>

    <div class="col-md-2">
        <button class="btn btn-primary ml-5 mb-3" id="btnSearch">Back to list</button>
    </div>
 
</div>


<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mt-5" id="panelSearch" style="display:none;">

    <div class="card">
        <div class="card-header">
            Search Filter
        </div>
        <div class="card-body">
            <div class="form-row">


                <div class="col-lg-6">

                    <label for="input-select">User Roles</label>
                    <div class="input-group mb-3">



                        <select class="form-control" id="txtRoleList">
                            @foreach (var item in ViewBag.RoleList)
                            {
                                <option value="@item.Id">@item.UserName</option>
                            }
                        </select>
                        <div class="input-group-append ml-4">
                            <button class="btn btn-primary" id="onSearch">Find</button>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

<div id="Control">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">

                <div class="card-body">
                    <div class="table-responsive" id="PanelUserList">

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/UserHelper/ListUserCtrl.js"></script>
<script>

    $("#btnCreate").click(function () {
        window.location.href = "@Url.Action("RegisterPlan", "Account")";
    });
</script>