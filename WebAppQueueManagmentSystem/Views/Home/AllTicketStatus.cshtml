@using WebAppQueueManagmentSystem.ApiHelpers.ApiEnum;

<style>
    .loader {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        transform: -webkit-translate(-50%, -50%);
        transform: -moz-translate(-50%, -50%);
        transform: -ms-translate(-50%, -50%);
        z-index: 9999;
    }
</style>

<div class="row mt-5">

    <div class="col-md-10">

    </div>

    <div class="col-md-1">
        <button class="btn btn-primary ml-5 mb-3" id="btnSearch">Search</button>
    </div>

</div>


<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mt-5" id="panelSearch" style="display:none;">
   
    <div class="card">
        <div class="card-header">
            Search Filter
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                    <label>Ticket Date</label>
                    <div class="input-group date" id="datetimepicker4" data-target-input="nearest">
                        <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker4" />
                        <div class="input-group-append" data-target="#datetimepicker4" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                    <label for="input-select">Ticket Status</label>
                    <select class="form-control" id="cmbTokenStatus">
                        @foreach (var item in ViewBag.CounterStatus)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                    <label for="input-select">Customer Type</label>
                    <select class="form-control" id="cmbCustomerType">
                        <option value="1">Customer</option>
                        <option value="2">Non Customer</option>
                        <option value="3">All Customer</option>
                    </select>
                </div>


                <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                    <button class="btn btn-primary" id="onSearch">Find</button>

                </div>
                <span id="LoaderEnabled" style="display:none" class="dashboard-spinner spinner-xs loader"></span>



            </div>
        </div>
    </div>
</div>

<div class="row">

    <!-- ============================================================== -->
    <!-- data table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">

            <div class="card-body">
                <div class="table-responsive" id="panel1">
                    @*  <span class="loader dashboard-spinner spinner-md"></span>*@
                    <table id="example2" class="table table-striped table-bordered second" style="width:100%">
                        <thead>
                            <tr>
                                <th>Token Number</th>
                                <th>Counter Number</th>
                                <th>Status</th>
                                <th>Created Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>


                            @for (int i = 1; i < 10; i++)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>Counter 1</td>
                                    <td>2021/11/12</td>
                                    <td>

                                        <button class="btn btn-primary btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            }



                        </tbody>


                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end data table  -->
    <!-- ============================================================== -->
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="~/assets/vendor/datepicker/moment.js"></script>
<script src="~/assets/vendor/datepicker/tempusdominus-bootstrap-4.js"></script>
<script src="~/assets/vendor/datepicker/datepicker.js"></script>
<script src="~/Scripts/AllTicketStatus/AllTicketStatus.js"></script>